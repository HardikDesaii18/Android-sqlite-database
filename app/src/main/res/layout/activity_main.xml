<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.example.hardikdesaii.databasedemo.MainActivity">

        <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:id="@+id/LL1"
        android:orientation="vertical">
        <EditText
            android:id="@+id/name"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:hint="Enter Your Name"
            android:gravity="left"/>
        </LinearLayout>


    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:id="@+id/LL2"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/email"
            android:inputType="textEmailAddress"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:hint="Enter Your Email"
            android:gravity="left" />
    </LinearLayout>


    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:id="@+id/LL3"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/mobile"
            android:inputType="number"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:hint="Enter Your Mobile"
            android:gravity="left"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_height="match_parent"
            android:layout_width="250dp"
            android:text="Choose Your profile Photo"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:gravity="fill"/>
        <ImageButton
            android:id="@+id/profilepic"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@mipmap/image_selector"/>

</LinearLayout>
    <LinearLayout
        android:id="@+id/LL6"
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imagedp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@mipmap/no_image"
            />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/LL4"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_gravity="bottom">
      <Button
          android:id="@+id/insertbtn"
          android:layout_height="match_parent"
          android:layout_width="match_parent"
          android:text="insert your entry "
          android:textSize="20dp"
          android:gravity="center"/>
    </LinearLayout>

</LinearLayout>
